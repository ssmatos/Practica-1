    <!-- SIGN UP PAGE -->
    
    <StackLayout x:Name="MasterLayout">

        <StackLayout x:Name="TabsStack"
                     Orientation="Horizontal">
            <Label x:Name="SignUpLabel" Text="Sign Up"
               TextColor="Black"
               FontAttributes="Bold"
               FontSize="50"
               Margin="30,35,20,10"/>
            <Label x:Name="LoginLabel" Text="Login"
               TextColor="LightGray"
               FontAttributes="Bold"
               FontSize="25"
               Margin="40,55,40,10"
               HorizontalOptions="EndAndExpand"/>
        </StackLayout>

        <StackLayout x:Name="LogoStack">
            <Image x:Name="SignUpIcon" Source="camera.png"
                   HeightRequest="{OnPlatform iOS=250, Android=200}"
                   WidthRequest="{OnPlatform iOS=250, Android=200}"/>
        </StackLayout>

        <StackLayout x:Name="LoginEntriesStack"
                     Padding="55,0,55,0">
            <Entry x:Name="Entry_Email" Placeholder="Email address"/>
            <Entry x:Name="Entry_Username" Placeholder="Username"/>
            <Entry x:Name="Entry_Password" Placeholder="Password"/>
            <Entry x:Name="Entry_RepeatPassword" Placeholder="Repeat Password"/>
            <Button x:Name="Btn_SignUp" Text="SIGN UP"
                    FontAttributes="Bold"
                    FontSize="Medium"
                    Margin="0,20,0,0"/>
        </StackLayout>

        <StackLayout x:Name="ToSStack">
            <Label Text="Terms of Service" HorizontalOptions="Center"
                   Padding="0,10,0,10"/>
        </StackLayout>

    </StackLayout>

</ContentPage>
